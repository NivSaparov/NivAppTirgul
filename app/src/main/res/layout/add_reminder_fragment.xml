<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.addReminder.AddEditReminderFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_addEditFragment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <EditText
        android:id="@+id/editText_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textSize="32sp"
        android:gravity="center"
        android:maxLength="32"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        tools:text="Need to do some homework.." />

    <EditText
        android:id="@+id/editText_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="4"
        android:gravity="top"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        android:maxLength="128"
        tools:text="Some text blalalbalca,ccdscdsslvsdvcdsavs a\ncskacmasjknvja sncsdnjkc,scksa dsmck asd cnsn cdsac sc ac dsa cs ana cmkasmck svnasknckasc va jcs" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_check_black_24dp" />
</LinearLayout>